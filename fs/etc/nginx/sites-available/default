server {
    listen  8080;

    root /var/www/html;
    index index.html index.htm index.php;

    server_name _;

    access_log /var/log/nginx/osticket-access.log;
    error_log  /var/log/nginx/osticket-error.log error;

    charset utf-8;

    location ~ /include {
        deny all;
        return 403;
    }

    location ~ /\.ht {
        deny all;
    }

    set $path_info "";

    if ($request_uri ~ "^/api(/[^\?]+)") {
        set $path_info $1;
    }

    if ($request_uri ~ "^/scp/.*\.php(/[^\?]+)") {
        set $path_info $1;
    }

    if ($request_uri ~ "^/kb/.*\.php(/[^\?]+)") {
        set $path_info $1;
    }

    if ($request_uri ~ "^/.*\.php(/[^\?]+)") {
        set $path_info $1;
    }

    if ($request_uri ~ "^/setup/.*\.php(/[^\?]+)") {
        set $path_info $1;
    }

    location / {
        try_files $uri $uri/ index.php;
    }

    location ~ ^/api/(?:tickets|tasks).*$ {
        try_files $uri $uri/ /api/http.php?$query_string;
    }

    location ~ ^/scp/ajax.php/.*$ {
        try_files $uri $uri/ /scp/ajax.php?$query_string;
    }

    location ~ ^/kb/faq.php/.*$ {
        try_files $uri $uri/ /kb/faq.php?$query_string;
    }

    location ~ ^/ajax.php/.*$ {
        try_files $uri $uri/ /ajax.php?$query_string;
    }

    location ~ ^/setup/ajax.php/.*$ {
        try_files $uri $uri/ /setup/ajax.php?$query_string;
    }

    location ~ \.php$ {

        fastcgi_param  SCRIPT_FILENAME  $document_root$fastcgi_script_name;
        include        fastcgi_params;
        fastcgi_param  PATH_INFO        $path_info;
        fastcgi_pass unix:/run/php/php7.0-fpm.sock;

        # fastcgi_param  SCRIPT_FILENAME  $document_root$fastcgi_script_name;
        # fastcgi_param  PATH_INFO        $path_info;
        # include snippets/fastcgi-php.conf;
        # fastcgi_pass unix:/run/php/php7.0-fpm.sock;
    }

    location = /favicon.ico { log_not_found off; access_log off; }
    location = /robots.txt  { access_log off; log_not_found off; }

    error_page 404 /index.php;

}
